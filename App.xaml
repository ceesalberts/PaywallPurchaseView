<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PaywallPurchaseView"
             xmlns:converters="clr-namespace:PaywallPurchaseView.Converters"
             x:Class="PaywallPurchaseView.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:ProductSelectionToColorConverter x:Key="ProductSelectionToColorConverter"/>
            <converters:ProductSelectionToBackgroundConverter x:Key="ProductSelectionToBackgroundConverter"/>
            <converters:ProductSelectionToVisibilityConverter x:Key="ProductSelectionToVisibilityConverter"/>
            <converters:ProgressToColorConverter x:Key="ProgressToColorConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            
            <!-- Colors -->
            <Color x:Key="PrimaryBlue">#007AFF</Color>
            <Color x:Key="PrimaryOrange">#FF9500</Color>
            <Color x:Key="PrimaryRed">#FF3B30</Color>
            <Color x:Key="BackgroundGray">#F8F9FA</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>
            <Color x:Key="BorderGray">#E0E0E0</Color>
            <Color x:Key="TextPrimary">#1A1A1A</Color>
            <Color x:Key="TextSecondary">#333333</Color>
            <Color x:Key="TextTertiary">#666666</Color>
            <Color x:Key="ToggleBackground">#F0F0F0</Color>
            <Color x:Key="SelectionBackground">#E3F2FD</Color>
            <Color x:Key="UnselectedGray">#CCCCCC</Color>
            
            <!-- Font Sizes -->
            <x:Double x:Key="HeroIconSize">120</x:Double>
            <x:Double x:Key="TitleFontSize">28</x:Double>
            <x:Double x:Key="FeatureIconSize">24</x:Double>
            <x:Double x:Key="FeatureTextSize">17</x:Double>
            <x:Double x:Key="ProductTitleSize">18</x:Double>
            <x:Double x:Key="ProductTextSize">15</x:Double>
            <x:Double x:Key="SaveBadgeTextSize">13</x:Double>
            <x:Double x:Key="ButtonTextSize">20</x:Double>
            <x:Double x:Key="FooterTextSize">16</x:Double>
            
            <!-- Corner Radius -->
            <CornerRadius x:Key="CardCornerRadius">15</CornerRadius>
            <CornerRadius x:Key="ButtonCornerRadius">12</CornerRadius>
            <CornerRadius x:Key="BadgeCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="ToggleCornerRadius">10</CornerRadius>
            
            <!-- Padding and Margins -->
            <Thickness x:Key="CardPadding">20</Thickness>
            <Thickness x:Key="ProductPadding">18,15</Thickness>
            <Thickness x:Key="ButtonPadding">25,18</Thickness>
            <Thickness x:Key="BadgePadding">8,2</Thickness>
            <Thickness x:Key="SectionMargin">0,5</Thickness>
            <Thickness x:Key="ProductMargin">0,8</Thickness>
        </ResourceDictionary>
    </Application.Resources>
</Application>
